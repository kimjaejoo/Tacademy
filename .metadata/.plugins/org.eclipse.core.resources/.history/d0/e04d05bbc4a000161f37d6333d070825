package com.taca;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;
import com.model.ReqRegistDto;
import com.model.ResError;
import com.model.ResRegistDto;

@WebServlet(name = "regist", description = "회원가입", urlPatterns = { "/regist" })
public class Regist extends HttpServlet {
	private static final long serialVersionUID = 1L;
	Connection conn = null;
	public Regist() {
		super();

	}
	
	

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		doPost(req, resp);
	}



	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		
		
		System.out.println("회원가입 처리");
		PrintWriter out = response.getWriter();
		
		
		
		String jsonStr = "{\"head\" : \"RG\",\"body\" : {	\"uid\" : \"\",\"name\" : \"\",\"upw\" : \"\",\"uuid\" : \"\",\"token\" : \"\",\"phone\" : \"\",\"model\" : \"\",\"os\" : \"\"} }";
		
		String uid = request.getParameter("uid");
		String name = request.getParameter("name");
		String upw = request.getParameter("upw");
		String uuid = request.getParameter("uuid");
		String token = request.getParameter("token");
		String phone = request.getParameter("phone");
		String model = request.getParameter("model");
		String os = request.getParameter("os");
		
		if(uid == null && name == null && upw == null && uuid == null && token == null && phone == null && model == null && os == null ){
			ResError err = new ResError(-1, "매개변수가 누락되었습니다.");
			// 객채 -> json으로
			Gson g = new Gson();
			String json = g.toJson(err);
			out.println(json);
			return;
		}
		
		String sql = "INSERT INTO tbl_User ('uid','name','upw','regdate','uuid','token','phone','model','os') VALUES ('kkkk','홍길동','1234','now()','abcd','1234','01012345678','sh929','a')";
		try {
			PreparedStatement pstmt = conn.prepareStatement(sql);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		// 요청 
		// 비즈니스 
		// 응답
		request.setCharacterEncoding("utf-8");
		response.setContentType("text/plain;charset=utf-8");
		response.setCharacterEncoding("utf-8");
		
	
		
		
	}

}
