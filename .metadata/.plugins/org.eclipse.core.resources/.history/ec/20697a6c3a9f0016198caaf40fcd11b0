package com.taca;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import javax.servlet.ServletConfig;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.eclipse.jdt.internal.compiler.parser.RecoveredStatement;

// servlet을 드럽게 쉽게 만든다....

@WebServlet(description = "db연동 테스트", urlPatterns = { "/DBtest" })
public class DBtest extends HttpServlet {

	Connection conn;

	private static final long serialVersionUID = 1L;

	public DBtest() {
		super();
		System.out.println("생성자");

	}

	public void init(ServletConfig config) {
		System.out.println("init => db연결하기");

		try {

			// 1. 드라이버 로드
			Class.forName("com.mysql.jdbc.Driver").newInstance();

			// 2. Connection
			conn = DriverManager
					.getConnection("jdbc:mysql://jsptest.cpkkponxntb7.ap-northeast-2.rds.amazonaws.com:3306/Tacademy?"
							+ "user=test&password=test1234");
			System.out.println("db연결 성공");

		} catch (InstantiationException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IllegalAccessException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		// 2. connection
		catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

	public void destroy() {
		System.out.println("destroy => db해제하기");
	}

	protected void service(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		System.out.println("service");
	}

	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		System.out.println("doGET => 쿼리 수행");
		response.getWriter().append("Served at: ").append(request.getContextPath());

		String sql = "select count(memidx) as cnt from tbl_User where uid = ? and upw = ? ";
		// 커넥션객체 => statement 획득
		PreparedStatement pstmt;
		try {
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, request.getParameter("uid"));
			pstmt.setString(2, request.getParameter("upw"));
			ResultSet rs = pstmt.executeQuery();
			if (rs.next()) {
				System.out.println("일치하는 회원수 : " + rs.getInt("cnt"));
			}
			if (rs != null) {
				rs.close();
			}
			if (pstmt != null) {
				pstmt.close();
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		System.out.println("doPOST");
		doGet(request, response);
	}

}
