package com.taca;

import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.google.gson.Gson;

import com.model.ResRegistDto;
import com.model.UserDao;

@WebServlet(name = "regist", description = "회원가입", urlPatterns = { "/regist" })
public class Regist extends HttpServlet {
	private static final long serialVersionUID = 1L;
	Connection conn = null;

	public Regist() {
		super();

	}

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {

		doPost(req, resp);
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {

		// 요청
		try {
			Class.forName("com.mysql.jdbc.Driver");
			conn = DriverManager.getConnection("jdbc:mysql://jsptest.cpkkponxntb7.ap-northeast-2.rds.amazonaws.com:3306/Tacademy?"
							+ "user=test&password=test1234");
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		catch (SQLException e) {
			e.printStackTrace();
		}
		
		String sql = "INSERT INTO tbl_User (`uid`,`name`,`upw`,`regdate`,`uuid`,`token`,`phone`,`model`,`os`) VALUES ('kkkk','홍길동','1234','now()','abcd','1234','01012345678','sh929','a') ";
		try {
			PreparedStatement pstmt = conn.prepareStatement(sql);
			pstmt.execute();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		// 비즈니스

		// 응답
		request.setCharacterEncoding("utf-8");
		response.setContentType("text/plain;charset=utf-8");
		response.setCharacterEncoding("utf-8");
		Gson gson = new Gson();
		ResRegistDto rrd = new ResRegistDto();
		rrd.setCode(1);
		rrd.setMsg("회원가입이 완료되었습니다.");
		UserDao user = new UserDao();
		String uid = user.getUid();
		rrd.setData(user);
		response.getWriter().println(gson.toJson(rrd));

	}

}
